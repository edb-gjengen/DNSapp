<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
    
    <!-- Header -->
    <include layout="@layout/header" 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:layout_alignParentTop="true"/>
	
	<!-- Footer -->
	<include layout="@layout/footer" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
		android:layout_alignParentBottom="true" />
	
	<!-- MENU: --> 
	<LinearLayout 
	    android:layout_height="fill_parent"
		android:layout_width="fill_parent" 
		android:layout_below="@id/header"
		android:layout_above="@id/footer"
		android:layout_marginTop="30px"
		android:layout_marginBottom="30px"
		android:orientation="vertical"
		android:gravity="center">
	    
	    <LinearLayout
	        android:layout_height="fill_parent"
			android:layout_width="fill_parent" 
			android:orientation="horizontal"
			android:layout_weight="1"
			android:gravity="center">
			
		    <RelativeLayout android:id="@+id/main_menu_program"
		        style="@style/MetroTile"
            	android:layout_margin="5px"
		        android:layout_height="fill_parent"
	        	android:layout_width="fill_parent"
	        	android:layout_weight="1"
		        android:onClick="programButton">
				
				<TextView 
		            style="@style/MetroTileText_bg"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_alignParentBottom="true"
		            android:text="@string/program_button" />
	        </RelativeLayout>
		    
		    
		    <RelativeLayout
		        style="@style/MetroTile"
            	android:layout_margin="5px"
		        android:layout_height="fill_parent"
		        android:layout_width="fill_parent"
		        android:layout_weight="1">
		        
		        <TextView android:id="@+id/main_menu_openinghours_header"
		            style="@style/MetroTileText"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_alignParentTop="true"
		            android:text="Text 1" />
		        
		        <!-- This is set in Java: -->
		        <TextView android:id="@+id/main_menu_openinghours"
		            style="@style/MetroTileText" 
		            android:textSize="10sp"
		            android:typeface="monospace"
		            android:gravity="left"
		            
		            android:layout_marginTop="20px"
		            android:layout_marginBottom="20px"
		            android:layout_marginLeft="5px"
		            android:layout_marginRight="5px"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_below="@id/main_menu_openinghours_header" />
		            
		    </RelativeLayout>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_height="match_parent"
			android:layout_width="match_parent" 
			android:orientation="horizontal"
			android:layout_weight="1"
			android:gravity="center">
		    
		    <RelativeLayout android:id="@+id/main_menu_tickets"
		        style="@style/MetroTile"
            	android:layout_margin="5px"
		        android:layout_height="match_parent"
		        android:layout_width="match_parent"
		        android:layout_weight="1"
		        android:onClick="ticketButton">
		        
		        <TextView 
		            style="@style/MetroTileText"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_alignParentBottom="true"
		            android:text="Billetter" />
		    </RelativeLayout>
		    
		    <RelativeLayout android:id="@+id/main_menu_join"
		        style="@style/MetroTile"
            	android:layout_margin="5px"
		        android:layout_height="match_parent"
		        android:layout_width="match_parent"
		        android:layout_weight="1"
		        android:onClick="joinButton">
				
		        <TextView 
		            style="@style/MetroTileText"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:layout_alignParentBottom="true"
		            android:text="Button 4" />		        
	        </RelativeLayout>
   	    </LinearLayout>
	</LinearLayout>
	
	<!-- FormÃ¥lsparagraf -->
