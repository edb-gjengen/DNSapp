<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MAIN MENU STYLES: -->
    <style name="MetroTile">
        <item name="android:background">@drawable/metro_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
	<!-- EVENT VIEW STYLES: -->
    <style name="BigHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="SmallHeader">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:background">#303030</item>
        <item name="android:paddingBottom">5px</item>
    </style>
    
    
    
    <!-- EVENT LIST STYLES: --> 
    <color name="ListItemBackgroundEven">#202020</color>      
    <color name="ListItemBackgroundOdd">#000000</color>
    
    <style name="ListItemTextTitle" parent="@android:style/TextAppearance">
    	<item name="android:textSize">14sp</item>
    	<item name="android:textColor">#cccccc</item>
    </style>
    
    <style name="ListItemTextDate" parent="@android:style/TextAppearance">
    	<item name="android:textSize">11sp</item>
    	<item name="android:textColor">#aaaaaa</item>
    </style>
    
    <!-- 'JOIN US' TEXT STYLE: -->
    <style name="JoinUsTextStyle" parent="@android:style/TextAppearance">
    </style>
        
</resources>